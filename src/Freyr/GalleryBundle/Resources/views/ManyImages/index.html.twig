{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h2>{{ type }} <small>{{ tagName }}</small></h2>
    </div>

    <div class="row">
    {% for image in images %}
        {% if (loop.index0 is divisibleby(4)) %}
        </div>
        <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a class="fancybox" rel="group" href="{{ cl(image.getName(), 850, false) }}">
                <img class="thumbnail lazyload" data-original="{{ cl(image.getName(), 250) }}" width="250" height="250" />
            </a>
        </div>
    {% endfor %}
    </div>

{% endblock %}
