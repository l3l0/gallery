{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
    {% for keyword in keywords %}
        {% if (loop.index0 is divisibleby(4)) %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a href="/{{ keyword.name|e }}" class="thumbnail">
                <img src="{{ keyword.getPrimaryImage().getThumbImageUrl() }}" data-src="{{ keyword.getPrimaryImage().getThumbImageUrl() }}" alt="..." />
            </a>
            <div class="caption">
                <h3 class="text-center">{{ keyword.name|e }}</h3>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
