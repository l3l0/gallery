{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h2>Galleries <small>freyr photography</small></h2>
    </div>
    <div class="row">
    {% for keyword in categories %}
        {% if (loop.index0 is divisibleby(4)) %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a href="{{ path('tag', {'keyword': keyword.getName()}) }}">
                <img class="thumbnail" src="{{ cl(keyword.getPrimaryImage().getName(), 250, true) }}" data-src="{{ cl(keyword.getPrimaryImage().getName(), 250) }}" alt="..." />
            </a>
            <div class="caption">
                <h3 class="text-center">{{ keyword.name|e }}</h3>
            </div>
        </div>
    {% endfor %}
    </div>

    <div class="page-header">
        <h2>Tags <small>freyr photography</small></h2>
    </div>
    <div class="row">
    {% for keyword in keywords %}
        {% if (loop.index0 is divisibleby(4)) %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a href="/{{ keyword.name|e }}">
                <img class="thumbnail" src="{{ cl(keyword.getPrimaryImage().getName(), 250) }}" data-src="{{ cl(keyword.getPrimaryImage().getName(), 250) }}" alt="..." />
            </a>
            <div class="caption">
                <h3 class="text-center">{{ keyword.name|e }}</h3>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
