{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h2>Tags
            <small>freyr photography</small>
        </h2>
    </div>
    <div class="row">
    {% for tag in tags %}
        {% if (loop.index0 is divisibleby(4)) %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a href="{{ path('tag', {'name': tag.name}) }}">
                <img class="thumbnail" src="{{ tag.coverPhoto.url }}" data-src="{{ tag.coverPhoto.url }}"
                     alt="{{ tag.name }}"/>
            </a>

            <div class="caption">
                <h3 class="text-center">{{ tag.name|e }}</h3>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
