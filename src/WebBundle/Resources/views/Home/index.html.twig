{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h2>Galleries <small>freyr photography</small></h2>
    </div>
    <div class="row">
    {% for item in galleries %}
        {% if (loop.index0 is divisibleby(4)) %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a href="{{ path('gallery', {'name': item.name}) }}">
                <img class="thumbnail" src="{{ item.photoUrlThumbnail }}" data-src="{{ item.photoUrlThumbnail }}"
                     alt="{{ item.photoName }}"/>
            </a>
            <div class="caption">
                <h3 class="text-center">{{ item.name|e }}</h3>
            </div>
        </div>
    {% endfor %}
    </div>

    <div class="page-header">
        <h2>Tags <small>freyr photography</small></h2>
    </div>
    <div class="row">
    {% for tag in tags %}
        {% if (loop.index0 is divisibleby(4)) %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-md-3">
            <a href="{{ path('tag', {'name': item.name}) }}">
                <img class="thumbnail" src="{{ item.photoUrlThumbnail }}" data-src="{{ item.photoUrlThumbnail }}"
                     alt="{{ item.photoName }}"/>
            </a>
            <div class="caption">
                <h3 class="text-center">{{ item.name|e }}</h3>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
